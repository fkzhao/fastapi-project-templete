# Environment variables for Docker deployment
# Copy this file to .env and adjust values as needed

# Application settings
APP_NAME=FastAPI Application
APP_VERSION=0.1.0
DEBUG=false

# Database configuration
DATABASE_URL_DEFAULT=sqlite:///./data/database.db
DATABASE_URL_ANALYTICS=sqlite:///./data/analytics.db

# For PostgreSQL (uncomment if using)
# DATABASE_URL_DEFAULT=postgresql://fastapi:fastapi123@postgres:5432/fastapi_db
# DATABASE_URL_ANALYTICS=postgresql://fastapi:fastapi123@postgres:5432/analytics_db

# Redis configuration (if using)
# REDIS_URL=redis://redis:6379/0

# API settings
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Session
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=3600

# Python path
PYTHONPATH=/app

# ============ MCP SSE Server Configuration ============
# Model Context Protocol Server-Sent Events
MCP_ENABLED=false
MCP_ENDPOINT=/mcp/sse
MCP_SERVER_NAME=FastAPI MCP Server
MCP_SERVER_VERSION=0.1.0

# SSE Configuration
MCP_SSE_RETRY=15000
MCP_SSE_PING_INTERVAL=30

# Security
MCP_REQUIRE_AUTH=false
MCP_API_KEY=your-secret-api-key-here

# Features
MCP_ENABLE_TOOLS=true
MCP_ENABLE_RESOURCES=true
MCP_ENABLE_PROMPTS=true

